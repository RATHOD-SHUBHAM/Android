<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvExpression"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/numberButton"
        android:gravity="end"
        android:ellipsize="start"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/numberButton"
        android:gravity="end"
        android:textSize="40sp"
        android:ellipsize="end"/>

<!--    resulttextview-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCe"
                style="@style/ActionbuttonStyle"
                android:text="Clear" />

            <TextView
                android:id="@+id/tvOpenPara"
                style="@style/ActionbuttonStyle"
                android:text="(" />

            <TextView
                android:id="@+id/tvClosePara"
                style="@style/ActionbuttonStyle"
                android:text=")" />

            <TextView
                android:id="@+id/tvDiv"
                style="@style/ActionbuttonStyle"
                android:text="/" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvOne"
                style="@style/NummberButtonStyle"
                android:text="1" />

            <TextView
                android:id="@+id/tvTwo"
                style="@style/NummberButtonStyle"
                android:text="2" />

            <TextView
                android:id="@+id/tvThree"
                style="@style/NummberButtonStyle"
                android:text="3" />

            <TextView
                android:id="@+id/tvMul"
                style="@style/ActionbuttonStyle"
                android:text="*" />

        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFour"
                style="@style/NummberButtonStyle"
                android:text="4" />

            <TextView
                android:id="@+id/tvFive"
                style="@style/NummberButtonStyle"
                android:text="5" />

            <TextView
                android:id="@+id/tvSix"
                style="@style/NummberButtonStyle"
                android:text="6" />

            <TextView
                android:id="@+id/tvSub"
                style="@style/ActionbuttonStyle"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSeven"
                style="@style/NummberButtonStyle"
                android:text="7" />

            <TextView
                android:id="@+id/tvEight"
                style="@style/NummberButtonStyle"
                android:text="8" />

            <TextView
                android:id="@+id/tvNine"
                style="@style/NummberButtonStyle"
                android:text="9" />

            <TextView
                android:id="@+id/tvAdd"
                style="@style/ActionbuttonStyle"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDot"
              style="@style/NummberButtonStyle"
                android:text="."/>
            <TextView
                android:id="@+id/tvZero"
                style="@style/NummberButtonStyle"
                android:text="0"/>
            <ImageView
                android:id="@+id/tvDel"
                style="@style/NummberButtonStyle"
                android:src="@drawable/backspace"
                android:scaleType="center"/>  <!-- change the size of image -->

            <TextView
                android:id="@+id/tvEqual"
                style="@style/ActionbuttonStyle"
                android:text="="/>



        </LinearLayout>



    </LinearLayout>





</LinearLayout>